<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="form-group">
                    <input type="text" name="titulo" placeholder="Titulo" class="form-control">
                </div>
                <div class="form-group">
                    <textarea name="subtitulo" placeholder="subtitulo" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="cuerpo" placeholder="Cuerpo" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>