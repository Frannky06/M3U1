<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col">
            <p class="text-right"> Hola {{ usuario }}! <a href="/admin/login/logout"
             class="btn btn-sm btn-danger"> Cerrar sesion
             <i class="fa fa-sign-out" aria-hidden="true"></i></a>
            </p>
        </div>
    </div>
    {{!arranca la fila 2}}
    <div class="row">
        <div class="col-7" style="margin-top:-9px ;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-5 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>
    </div>
    {{!termina fila 2 e inicia fila 3}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary">
                            <i class="fa fa-pencil"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                            <i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{!fin fila 3}}
</div>